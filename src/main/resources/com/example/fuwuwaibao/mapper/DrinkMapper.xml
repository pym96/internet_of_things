<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.fuwuwaibao.mapper.DrinkMapper">
    <select id="selectDrinksLeft" resultType="java.lang.Integer">
        SELECT drink_left
        FROM drinksTable
        WHERE drink_name = #{drink_name}
    </select>

</mapper>